    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/api/src",
            "program": "app/main.py", 
            "args": [
              "run",
              "--reload"
            ],
            "console": "integratedTerminal",
            "env": {
              "DATABASE_URL": "postgresql://user:password@localhost:5432/mydatabase",
              "HADOOP_URL": "http://localhost:9870"
            },
            "justMyCode": true
        }
    ]
}